package starter;

import java.util.Scanner;

public class Pattern6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number");
		int n=sc.nextInt();
		int sp=0;
		for(int i=1;i<=n;i++) {
			for(int j=1;j<i;j++)
			{
				System.out.print(" ");
			}
			System.out.print(i); 
			for(int k=5-sp;k>=1;k--)
			{
				System.out.print(" ");
			}
			sp+=2;
			if(i>n)
			System.out.print(i);
			System.out.println();
			
		}

	}

}
